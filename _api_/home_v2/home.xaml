

<StackPanel Margin="30,0,30,0">

    <handycontrol:TransitioningContentControl Margin="32,0,32,0">
        <handycontrol:Carousel IsCenter="True" AutoRun="True" Width="700" Height="330" VerticalAlignment="Center">
            <Grid Width="700">
                <Grid.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding OpenUrl}" CommandParameter="https://atmb.top"/>
                </Grid.InputBindings>
                <Image Width="700" Stretch="UniformToFill" Source="https://ss0.bdstatic.com/94oJfD_bAAcT8t7mm9GUKT-xh_/timg?image&amp;quality=100&amp;size=b4000_4000&amp;sec=1559963764&amp;di=3341258e3739f344ea9cfe165e30c258&amp;src=http://img.pconline.com.cn/images/upload/upc/tx/photoblog/1411/24/c3/41259728_41259728_1416821035210.jpg"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                           <TextBlock Foreground="White" FontSize="50" Text="秋之盒官网"/>
                            <TextBlock  HorizontalAlignment="Center" FontSize="20" Foreground="White" Text="https://www.atmb.top"/>
                </StackPanel>
     

            </Grid>

            <Grid Width="700">
                <Grid.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding OpenUrl}" CommandParameter="https://www.zsh2401.top"/>
                </Grid.InputBindings>
                <Image Width="700" Stretch="UniformToFill" Source="http://b-ssl.duitang.com/uploads/item/201205/03/20120503181506_5RQKv.jpeg"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                           <TextBlock Foreground="White" FontSize="50" Text="开发者的博客"/>
                            <TextBlock  HorizontalAlignment="Center" FontSize="20" Foreground="White" Text="https://www.zsh2401.top"/>
                </StackPanel>
            </Grid>

            <Grid Width="700">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Width="100" Margin="30" Source="https://timgsa.baidu.com/timg?image&amp;amp;quality=80&amp;amp;size=b9999_10000&amp;sec=1560567982&amp;di=16c8b4abb55dc9e0c0b53cea38d5f4d8&amp;imgtype=jpg&amp;er=1&amp;src=http%3A%2F%2Fpic.2265.com%2Fupload%2Fdata%2F20150801%2F37ba205d15ff788db399422a05568995.png"/>
                    <TextBlock DockPanel.Dock="Top" FontSize="20" TextWrapping="Wrap" Text="开发者搭建的贴吧云签到" />
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="Gray" Text="闲着没事搭了个贴吧云签到造福大家!哈哈"/>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="Gray" Text="每天自动签到,让你等级直升!"/>
                    <Button FontSize="12" HorizontalAlignment="Left" Command="{Binding OpenUrl}" CommandParameter="http://dream.zsh2401.top:2402/" Content="GO>>"/>
                </StackPanel>
            </Grid>

            <Grid Width="700">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Width="100" Margin="30" Source="http://image.coolapk.com/apk_logo/2018/1109/15/ic_launcher-208568-o_1crrm1ug0cl64lo4plnkljt1q-uid-408649@288x288.png"/>
                    <TextBlock DockPanel.Dock="Top" FontSize="20" TextWrapping="Wrap" Text="快否激活器已上架!" />
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="Gray" Text="比官方的更轻量更高效!"/>
                    <Button FontSize="12" HorizontalAlignment="Left" Command="{Binding OpenUrl}" CommandParameter="http://atmb.top/extension" Content="康康>>"/>
                </StackPanel>
            </Grid>

            <Grid Width="700">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Width="100" Margin="30" Source="https://avatars2.githubusercontent.com/u/17383395?s=460&amp;v=4"/>
                    <TextBlock DockPanel.Dock="Top" FontSize="20"  TextWrapping="Wrap" Text="感谢HandyControl --everything can be handy" />
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="12" Width="400" Foreground="Gray" Text="HandyControl是一套WPF控件库，它几乎重写了所有原生样式，同时包含50多款额外的控件（正逐步增加）。"/>
                    <Button FontSize="12"  Command="{Binding OpenUrl}" CommandParameter="https://handyorg.github.io/?from=autumnbox" Content="https://handyorg.github.io/"/>
                </StackPanel>
            </Grid>

        </handycontrol:Carousel>
    </handycontrol:TransitioningContentControl>

    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" DockPanel.Dock="Top">
        <Image Margin="0" HorizontalAlignment="Left" Width="50" Source="http://atmb.top/images/leaves.png">
            <Image.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding OpenUrl}" CommandParameter="http://www.atmb.top"/>
            </Image.InputBindings>
        </Image>
        <StackPanel VerticalAlignment="Center">
            <TextBlock FontSize="40" Text="{DynamicResource AppNameWithVersion}"/>
            <TextBlock Foreground="DarkGray" Text="秋之盒将ADB命令行工具进行图形化封装,实现大量功能,并完全中文汉化"/>
        </StackPanel>
    </StackPanel>


<StackPanel HorizontalAlignment="Center"  Orientation="Horizontal">
    <StackPanel Orientation="Horizontal" Margin="20">
                    <Image Source="/Resources/Drawable/github.png" Height="110"/>
                    <StackPanel Width="150" Margin="10">
                        <TextBlock Text="{DynamicResource PanelHomeOpenSource}"  HorizontalAlignment="Center" FontSize="25px" ></TextBlock>
                        <TextBlock Foreground="Gray"  Text="{DynamicResource PanelHomeOpenSourceTip}" TextWrapping="Wrap" FontSize="12px" ></TextBlock>
                        <Button Command="{Binding ShowWindowDialog}" CommandParameter="OpenSource" Margin="5"  FontSize="12px" Content="{DynamicResource PanelHomeOpenSourceButton}" ></Button>
                    </StackPanel>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="20">
                    <Image Source="/Resources/Drawable/Home/donate.png" Margin="20" Height="110"></Image>
                    <StackPanel Width="150" Margin="10">
                        <TextBlock Foreground="{DynamicResource CardForegroundBrush}" Text="捐赠" HorizontalAlignment="Center" FontSize="25px" ></TextBlock>
                        <TextBlock Foreground="Gray" Text="{DynamicResource PanelHomeSupportTip}" TextWrapping="Wrap" FontSize="12px" ></TextBlock>
                        <Button  Command="{Binding ShowWindowDialog}" CommandParameter="Donate" Margin="5" FontSize="12px"  Content="{DynamicResource PanelDonate}" ></Button>
                    </StackPanel>
    </StackPanel>
</StackPanel>


<StackPanel  HorizontalAlignment="Center" Orientation="Horizontal">
    <StackPanel Orientation="Horizontal" Margin="20">
                <Image Source="/Resources/Drawable/Home/mail.png"  Height="110"/>
                <StackPanel Width="150" Margin="10">
                    <TextBlock Text="{DynamicResource PanelHomeContact}"  HorizontalAlignment="Center" FontSize="25px" ></TextBlock>
                    <TextBlock Foreground="Gray"  FontSize="12" TextAlignment="Center">zsh2401@163.com</TextBlock>
                    <Button  Margin="5" FontSize="12px" Command="{Binding OpenUrl}" CommandParameter="{DynamicResource UrlOfficialWebsite}" Content="{DynamicResource PanelHomeOfficialWebsite}" FontFamily="{DynamicResource AutumnBox.Font}"></Button>
                    <Button  FontSize="12px" Command="{Binding OpenGoUrl}" CommandParameter="{DynamicResource AGoQQGroup}" Content="{DynamicResource PanelHomeJoinQQGroup}" ></Button>
                </StackPanel>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="20">
                <Image Source="/Resources/Drawable/Home/help.png"  Height="110" Width="110" Margin="20"/>
                <StackPanel Width="150" Margin="10">
                    <TextBlock Text="{DynamicResource PanelHomeHelp}"  HorizontalAlignment="Center" FontSize="25px" ></TextBlock>
                    <TextBlock Foreground="Gray"  TextWrapping="Wrap" Text="{DynamicResource PanelHomeHelpTip}"  HorizontalAlignment="Center" FontSize="12" ></TextBlock>
                    <Button  Margin="5" FontSize="12px" Command="{Binding OpenGoUrl}" CommandParameter="{DynamicResource AGoHelp}" Content="{DynamicResource PanelHomeManual}" ></Button>
                    <Button  FontSize="12px" Command="{Binding OpenGoUrl}" CommandParameter="{DynamicResource AGoFeedback}" Content="{DynamicResource PanelHomeReport}" ></Button>
                </StackPanel>
    </StackPanel>
</StackPanel>

<TextBlock HorizontalAlignment="Center" Foreground="Gray" Text="{Binding Sentence}"/>

</StackPanel>